# ReTiCh Environment Variables
# Copy this file to .env and adjust values for your environment

# =============================================================================
# GENERAL
# =============================================================================
TAG=latest
ENVIRONMENT=development

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=retich
POSTGRES_PASSWORD=retich_secret
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# NATS
# =============================================================================
NATS_URL=nats://nats:4222
NATS_ADMIN_PASSWORD=admin_secret

# =============================================================================
# MONITORING
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# MICROSERVICES PORTS
# =============================================================================
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
MESSAGING_SERVICE_PORT=8082
USER_SERVICE_PORT=8083
CLIENT_PORT=5173

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
